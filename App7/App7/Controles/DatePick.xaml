<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App7.Controles.DatePick">
    <ContentPage.Content>
        <StackLayout>
            <DatePicker
                TextColor="Green"
                MinimumDate="01/11/2000"
                MaximumDate="01/12/2018"
                Date="01/01/2017"
                DateSelected="ActionDateSelected"
                />
            <Label x:Name="lbl_resultado"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>